<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lbg"
    >
    <LinearLayout
        android:id="@+id/fru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="您的用户名是："
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/f_user"
            android:layout_width="210dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fefefe"
            android:background="@drawable/shapefile"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fru"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请输入新密码:"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/f_password"
            android:layout_width="210dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColor="#fefefe"
            android:background="@drawable/shapefile"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fqr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/frp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认密码"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/fc_password"
            android:layout_width="210dp"
            android:layout_marginLeft="42dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fefefe"
            android:background="@drawable/shapefile"
            />
    </LinearLayout>

    <Button
        android:id="@+id/change"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fqr"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shapefile"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/black" />


</RelativeLayout>
